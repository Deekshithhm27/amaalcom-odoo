<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="salary_lines_view_employee_form_inherit" model="ir.ui.view">
        <field name="name">hr.employee.form</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.view_employee_form"/>
        <field name="arch" type="xml">
        	<xpath expr="//header" position="replace">
        		<header>
        			<button name="%(hr.plan_wizard_action)d" string="Launch Plan" type="action" groups="hr.group_hr_user" invisible="1"/>
        			<button name="confirm_salary_details" string="Confirm Salary Details" type="object" groups="hr.group_hr_user" attrs="{'invisible': [('confirm_salary_bool', '=', True)]}"/>
        		</header>
        	</xpath>
        	<xpath expr="//field[@name='parent_id']" position="after">
        		<field name="confirm_salary_bool" invisible="1"/>
        	</xpath>
            <xpath expr="//page[@name='hr_settings']" position="after">
            	<page name="salary" string="Salary Details">
                    <field name="client_salary_rule_ids">
                        <form>
                            <group>
                                <group>
                                    <field name="name"/>
                                    <field name="amount"/>
                                </group>
                            </group>
                        </form>
                        <tree editable="bottom">
                            <field name="name"/>
                            <field name="amount" sum="Total Amount"/>
                        </tree>
                    </field>
                </page>
            </xpath>           
        </field>
    </record>
</odoo>